<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicplayerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PlayingListActivity"
            android:label="@string/title_activity_playing_list"
            android:parentActivityName="com.example.android.musicplayerapp.MainActivity"/>


        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.android.musicplayerapp.MainActivity"/>


        <activity android:name=".ComingSoon1"
            android:label = "@string/category_coming1"
            android:parentActivityName="com.example.android.musicplayerapp.MainActivity"/>

        <activity android:name=".ComingSoon2"
            android:label = "@string/category_coming2"
            android:parentActivityName="com.example.android.musicplayerapp.MainActivity"/>

        <activity android:name=".ComingSoon3"
            android:label = "@string/category_coming3"
            android:parentActivityName="com.example.android.musicplayerapp.MainActivity"/>

        <activity android:name=".NowPlayingActivity"
            android:label="@string/now_playing_activity"
            android:parentActivityName="com.example.android.musicplayerapp.PlayingListActivity">


        </activity>
    </application>

</manifest>